local function hflip_object(object_url, direction)

	if direction == 1 then 
		go.set_rotation(vmath.quat_rotation_y(0), object_url)
	elseif direction == -1 then
		go.set_rotation(vmath.quat_rotation_y(math.pi), object_url)
	end

end


